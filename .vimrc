set nocompatible
filetype indent plugin on
syntax on
set hidden
set wildmenu
set showcmd
set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set laststatus=2
set confirm
set visualbell

" Line number settings
set number
set numberwidth=4
"colorscheme trivia1256 " for light background
hi LineNr term=bold cterm=bold ctermfg=2 ctermbg=NONE gui=NONE guifg=Grey guibg=Grey90

" Tabs settings
set shiftwidth=2
set softtabstop=2
set expandtab
