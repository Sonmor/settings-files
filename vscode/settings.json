{
	// Main editor settings
	"window.openFilesInNewWindow": "off",
	"editor.tabSize": 2, // размер знаков табуляции
	"editor.insertSpaces": true, // используем пробелы вместо знаков табуляции
	"editor.fontSize": 14, // размер шрифта в редакторе
	"window.zoomLevel": 1,
	"editor.folding": false, // Выключаем сворачивание блоков кода - скобки рядом с номером строки
	"editor.smoothScrolling": true, // Плавный скроллинг
	"editor.minimap.enabled": false,
	"editor.detectIndentation": true, // Подсветка размеров отступов при выделении блока
	"editor.suggestSelection": "first",
	"symbols.hidesExplorerArrows": false,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,

	//Wrapping
	"editor.wordWrap": "bounded",
	"editor.wrappingIndent": "same",
	"editor.wordWrapColumn": 80,

	//Определяет, будет ли редактор прокручиваться за пределы последней строки
	"editor.scrollBeyondLastLine": true,
	"editor.multiCursorModifier": "ctrlCmd",

	//Rename tags
	"editor.linkedEditing": true,

	//HTML auto closing tags
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,

	//Определяет должен ли редактор отображать управляющие символы
	"editor.renderControlCharacters": false,

	//Управляет выделением символов, которые можно спутать с основными символами ASCII, кроме тех, которые являются общими для текущего пользователя.
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.quickSuggestionsDelay": 0,
	"html.completion.attributeDefaultValue": "singlequotes",

	//Appearance - визуальное оформление редактора
	"workbench.colorTheme": "Default Dark+",
	"editor.bracketPairColorization.enabled": false,
	"editor.glyphMargin": false,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"window.density.editorTabHeight": "compact",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.iconTheme": "catppuccin-perfect-sequoia",
	"workbench.activityBar.location": "top",
	"workbench.preferredDarkColorTheme": "Bearded Theme HC Minuit",
	"editor.accessibilitySupport": "off",
	"window.commandCenter": false,
	"workbench.layoutControl.enabled": false,

	//Cursor
	"editor.cursorBlinking": "expand",
	"editor.cursorStyle": "line-thin",
	"editor.cursorSmoothCaretAnimation": "explicit",

	//Fonts
	"editor.lineHeight": 28,
	"editor.fontLigatures": true,
	"editor.fontFamily": "Monaspace Neon, Iosevka NFM, monospace, JetBrains Mono, Maple Mono, MonoLisa, Ubuntu Mono, Operator mono lig, DejaVu Sans Mono, Fira Code, monoki, Hasklig, PragmataPro, IBM Plex Mono, Victor Mono, Roboto Mono",
	"editor.inlayHints.fontFamily": "Monaspace Neon",
	//Terminal
	"terminal.integrated.fontFamily": "monospace",
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.tabs.enabled": false,

	//Explorer
	"explorer.confirmDelete": false,
	"explorer.compactFolders": false,
	"explorer.confirmDragAndDrop": false,

	//Разрешает уменьшить размер папок когда доступного места недостаточно для отображения всех вкладок одновременно
	"workbench.editor.tabSizing": "shrink",
	"workbench.startupEditor": "newUntitledFile",

	//Emmet
	"emmet.includeLanguages": {
		"blade": "html",
		"javascript": "javascriptreact"
	},
	"emmet.triggerExpansionOnTab": true,

	//Formatting
	"prettier.semi": true,
	"prettier.useTabs": true,
	"editor.formatOnSaveMode": "file",
	"prettier.embeddedLanguageFormatting": "auto",
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},

	//Включить круглые скобки вокруг единственного параметра функции стрелки
	"prettier.arrowParens": "avoid",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.inlineSuggest.enabled": true,

	//Breadcrumbs
	"breadcrumbs.enabled": true,
	"breadcrumbs.icons": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showConstructors": false,

	//JS & TS
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.preferences.quoteStyle": "single",
	"typescript.preferences.quoteStyle": "single",
	"javascript.format.semicolons": "remove",
	"typescript.format.semicolons": "remove",
	"js/ts.implicitProjectConfig.experimentalDecorators": true,

	//Spell checker
	"cSpell.language": "en,ru",
	"cSpell.userWords": [
		"autofetch",
		"catppuccin",
		"Embedde",
		"esbenp",
		"Fira",
		"Hasklig",
		"Iosevka",
		"kuznecov",
		"Monaspace",
		"monoki",
		"nunit",
		"nuxt",
		"Parens",
		"Roboto",
		"screencast",
		"singlequotes",
		"sonarlint",
		"vsintellicode",
		"настройки",
		"Особенности"
	],
	"cSpell.enabled": true,
	"cSpell.enableFiletypes": [
		"blade",
		"jsx",
		"tsx",
		"js",
		"scss",
		"sass",
		"vue",
		"cs",
		"java",
		"class"
	],
	"editor.unicodeHighlight.allowedCharacters": {
		"а": true,
		"с": true,
		"Т": true,
		"б": true,
		"е": true
	},

	"editor.hideCursorInOverviewRuler": true,

	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/.expo": true,
		"**/.expo-shared": true,
		"**/.idea": true,
		"**/.vscode": true,
		"**/.next": true,
		"**/.nuxt": true,
		"**/dist": true,
		"**/.vs": true
	},

	//Git
	"git.enableSmartCommit": true,
	"git.autofetch": true,
	"git.openRepositoryInParentFolders": "never",

	//Other settings
	"files.defaultLanguage": "plaintext", // язык программирования с которым ассоциируется файл по-умолчанию - просто текст
	"diffEditor.ignoreTrimWhitespace": false, // Игнорировать проблемы при сравнении в редакторе diff
	"security.workspace.trust.untrustedFiles": "open", // открывает файлов без предупреждения
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue", // автоматически изменять предложение автозаполнение на основании предыдущего выбора
	"window.confirmBeforeClose": "keyboardOnly", // подтверждение перед закрытием окна только при использовании клавиатуры
	"editor.gotoLocation.multipleDefinitions": "goto",
	"workbench.editor.empty.hint": "hidden",

	"screencastMode.fontSize": 20,

	"files.associations": {
		"*.md": "markdown"
	},

	// Extensions
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"sonarlint.pathToNodeExecutable": "/Users/kuznecov-roman/.nvm/versions/node/v22.6.0/bin/node",
	"nunitTestRunner.projectsPatterns": ["**/bin/*Tests.dll"]
}
